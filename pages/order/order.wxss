/* pages/order/order.wxss */
page{
  background-color: #f6f6f6;
}
.m_menu{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
  border-top: solid 2rpx #f6f6f6;
}

.m_menu_row{
  text-align: center;
  width: 187rpx;
  height: 84rpx;
  line-height: 84rpx;
}
.m_menu_item{
  display: inline-block;
  text-align: center;
  color: #6a6a6a;
  font-size: 28rpx;
  height: 78rpx;
}

.m_menu_selected{
  color: #a1bf56;
  border-bottom: 4rpx solid #a1bf56;
}

/* 店铺view */
.store{
  margin-top: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  background-color: white;
  padding: 35rpx;
  font-size: 30rpx;
}

.store_info{
  width: 340rpx;
  text-align: left;
}

.store_info_logo{
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}

.store_message{
  width: 340rpx;
  text-align: right;
  color: #a7bd64;
}

/* 订单列表 */
.m_lists{
  /* display: flex;
  flex-direction: row;
  justify-content: flex-start; */
  align-items: center;
  background-color: white;

}
.willPay{
  background-color: white;
  padding: 10rpx 30rpx 30rpx 30rpx;
}
.willPay_row{
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 30rpx;
  width: 630rpx;
  background-color: #f9f9f9;
  margin-top: 4rpx;
  position: relative;
}

.willPay_row_productImg{
  width: 180rpx;
  height: 180rpx;
}
.willPay_row_productInfo{
  margin-left: 30rpx;
  width: 482rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}

.willPay_row_productInfo_price{
  margin-top: 30rpx;
  color: #a7bd64;
}

.willPay_row_count{
  position: absolute;
  right: 30rpx;
  bottom: 30rpx;
  font-size: 26rpx;
}

.willPay_row_productInfo_title{
  display: block;
}

.action{
  border-bottom: solid 2rpx #e1e1e1;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
  padding: 30rpx;
  width: 630rpx;
}

.allMoney{
  text-align: left;
  width: 345rpx;
  font-size: 28rpx;
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  align-items: center;
}

.allMoney_rmb{
  margin-left: 10rpx;
  color: #a7bd64;
}

.submit{
  display: flex;
  flex-direction: row-reverse;
  align-items: flex-start;
  justify-content: flex-end;
  width: 345rpx;
  text-align: right;
}


.submit_confirm{
  color: #a1bf56;
  font-size: 26rpx;
  width: 158rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 4rpx;
  border: solid 2rpx #a1bf56;
}

.submit_cancle{
  color: black;
  font-size: 26rpx;
  margin-right: 20rpx;
  width: 158rpx;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 4rpx;
  border: solid 2rpx #e1e1e1;
}

/* 待发货、已发货、已完成等的其他的 */
.allMoney_2{
  text-align: right;
  width: 345rpx;
  font-size: 28rpx;
}